{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "types": ["node", "express", "swagger-ui-express", "jest"],
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"]
      },
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  